<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mumu.meishijia.dao.im.IImDao">
    <select id="queryContacts" parameterType="java.lang.Integer" resultType="com.mumu.meishijia.pojo.im.Contacts">
        SELECT friend_id,remark,avatar,sort_letter
        FROM `user`,relation_chain
        WHERE user_id=#{id} AND id=friend_id
    </select>
</mapper>